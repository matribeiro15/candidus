{{!--
Page that shows the current tag

This page includes default information about the currently active tag
- If the tag has a custom image, it will be shown here. If not, the page's publication cover will be used instead.
--}}


{{#contentFor "scripts"}}
<script async src='{{asset "built/tag.bundle.js"}}'></script>
{{/contentFor}}

{{!< default}} {{#tag}} {{#if feature_image}} <header class='container mb-4'>
	<div class='banner banner--fixed-height'>
		<div class='banner__text banner__text--themed mobile--hidden px-4 py-2'>
			<h1 class='banner__title'>{{name}}</h1>
			<p class='banner__description hidden-mobile'>{{description}}</p>
		</div>
		<img class='banner__image image--banner' srcset='{{img_url feature_image size=' s'}} 300w, {{img_url feature_image size='m' }} 600w, {{img_url feature_image size='l' }} 1000w, {{img_url
			feature_image size='xl' }} 2000w' sizes='100vw' src='{{img_url feature_image size=' xl'}}' alt='{{name}}' />
	</div>
	</header>
	{{/if}}

	{{!--
	A list of the author's publication.
	Can be shown either as a feed or a grid-card gallery
	--}}
	<div class="container">
		<div class="row">
			<div class="col-12">
				<header class="toolbar toolbar--primary p-2 mb-4">
					<div class="toolbar__left">
						<h2 class="h3 ml-1">{{t "Tagged with"}} {{name}}</h2>
					</div>
					<div class="toolbar__right">
						<button title="{{t " Show a card grid of posts"}}" id="grid__button" class="btn btn--flex toolbar__item mr-1">{{> "icons/grid" color="white"}}</button>
						<button title="{{t " Show a feed list of posts"}}" id="feed__button" class="btn btn--flex toolbar__item">{{> "icons/list" color="white"}}</button>
					</div>
				</header>
				{{/tag}}

				{{!-- Toggle between the following two list styles using util. class hidden --}}
				<main>
					<div id="post__container" class="grid--three">
						{{#foreach posts}}
						{{> "post/card" showHeader="true" showBody="true"}}
						{{/foreach}}
					</div>
					<div id="feed__container" class="hidden">
						{{#foreach posts}}
						{{> "post/feed"}}
						{{/foreach}}
					</div>
				</main>

				{{!-- Load-more-posts button --}}
				<div class="my-4 content--centered">
					<button id="read-more__button" class="btn btn--primary btn--wider">{{t "Load more posts"}}</button>
				</div>
			</div>
		</div>
	</div>