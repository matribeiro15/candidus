<html lang='{{@site.locale}}'>

	<head>
		<meta charset='utf-8' >
		<meta http-equiv='X-UA-Compatible' content='IE=edge'>
		<title>{{meta_title}}</title>
		<meta name='HandheldFriendly' content='True'>
		<meta name='viewport' content='width=device-width, initial-scale=1.0'>
		<link
			rel='preload'
			as='font'
			href='{{asset "built/shared.css"}}'
			onload="this.onload=null;this.rel='stylesheet'"
		>
		<link rel='stylesheet' type='text/css' href='{{asset "built/index.css"}}'>
		<script async src='{{asset "built/preload.bundle.js"}}'></script>
	</head>

	<body>

		<section class='container container--page'>
			<h1 class='mb-2'>{{statusCode}} - {{t 'An error has occured'}}</h1>
			<details class='mb-4'>
				<summary>
					Show details
				</summary>
				<p class='mb-4'>{{message}}</p>
			</details>
			<div>
				<a class='btn btn--primary btn--wider mb-1' href='#' onclick='window.history.back()'>{{t
						'To the previous page'
					}}</a>
				<a class='btn btn--wider' href='{{@site.url}}'>{{t 'To the front page'}}</a>
			</div>
		</section>
	</body>

</html>